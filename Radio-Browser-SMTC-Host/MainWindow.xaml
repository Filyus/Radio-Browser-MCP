<Window x:Class="RadioBrowserSmtcHost.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Radio Browser"
        Width="640"
        Height="300"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="16">
        <StackPanel>
            <TextBlock Text="Radio Browser" FontSize="18" FontWeight="SemiBold"/>
            <TextBlock x:Name="EndpointText" Margin="0,8,0,0" TextWrapping="Wrap" />
            <TextBlock x:Name="StateText" Margin="0,8,0,0" TextWrapping="Wrap" />
            <TextBlock x:Name="StationText" Margin="0,10,0,0" TextWrapping="Wrap" />
            <TextBlock x:Name="ArtistText" Margin="0,4,0,0" TextWrapping="Wrap" />
            <TextBlock x:Name="TitleText" Margin="0,4,0,0" TextWrapping="Wrap" />
        </StackPanel>
    </Grid>
</Window>
